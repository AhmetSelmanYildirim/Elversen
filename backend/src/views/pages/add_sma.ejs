<div>
<% if (locals.validation_error != undefined) { %>
    <%- include('../partials/_message.ejs')  %>
<% } %>
</div>
<form class="add-sma-form" action="/add-sma" method="post" enctype="multipart/form-data">
    <div class="form-field-container">
        <label for="name">İsim</label>
        <input class="add-sma-form-field" type="text" name="name" placeholder="İsim" value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>
    <div class="form-field-container">
        <label for="surname">Soyisim</label>
        <input class="add-sma-form-field" type="text" name="surname" placeholder="Soyisim"  value="<%= typeof surname != 'undefined' ? surname : '' %>">        
    </div>
    <div class="form-field-container">
        <label for="dateOfBirth">Doğum tarihi</label>
        <input class="add-sma-form-field" type="date" name="dateOfBirth" placeholder="Doğum tarihi"  value="<%= typeof dateOfBirth != 'undefined' ? dateOfBirth : '' %>">
    </div>
    <div class="form-field-container">
        <label for="weight">Kilo</label>
        <input class="add-sma-form-field" type="number" name="weight" placeholder="Kilo"  value="<%= typeof weight != 'undefined' ? weight : '' %>">
    </div>
    <div class="form-field-container">
        <label for="city">Şehir</label>
        <input class="add-sma-form-field" type="text" name="city" placeholder="Şehir"  value="<%= typeof city != 'undefined' ? city : '' %>">
    </div>
    <div class="form-field-container">
        <label for="responsibleName">Sorumlu isim</label>
        <input class="add-sma-form-field" type="text" name="responsibleName" placeholder="Sorumlu isim"  value="<%= typeof responsibleName != 'undefined' ? responsibleName : '' %>">
    </div>
    <div class="form-field-container">
        <label for="responsiblePhone">Sorumlu telefon</label>
        <input class="add-sma-form-field" type="text" name="responsiblePhone" placeholder="Sorumlu telefon"  value="<%= typeof responsiblePhone != 'undefined' ? responsiblePhone : '' %>">
    </div>
    <div class="form-field-container">
        <label for="responsibleEmail">Sorumlu e-posta</label>
        <input class="add-sma-form-field" type="email" name="responsibleEmail" placeholder="Sorumlu e-posta"  value="<%= typeof responsibleEmail != 'undefined' ? responsibleEmail : '' %>">
    </div>
    <div class="form-field-container">
        <label for="collectedAmount">Toplanan tutar</label>
        <input class="add-sma-form-field" type="number" name="collectedAmount" placeholder="Toplanan tutar"  value="<%= typeof collectedAmount != 'undefined' ? collectedAmount : '' %>">
    </div>
    <div class="form-field-container">
        <label for="requiredAmount">Tedavi tutarı</label>
        <input class="add-sma-form-field" type="number" name="requiredAmount" placeholder="Tedavi tutarı"  value="<%= typeof requiredAmount != 'undefined' ? requiredAmount : '' %>">
    </div>
    <div class="form-field-container">
        <label for="iban">IBAN</label>
        <input class="add-sma-form-field" type="number" name="iban" placeholder="IBAN"  value="<%= typeof iban != 'undefined' ? iban : '' %>">
    </div>
    <div class="form-field-container">
        <label for="instagramUsername">Instagram kullanıcı adı</label>
        <input class="add-sma-form-field" type="text" name="instagramUsername" placeholder="elversensma"  value="<%= typeof instagramUsername != 'undefined' ? instagramUsername : '' %>">
    </div>
    <div class="form-field-container">
        <label for="facebookUsername">Facebook kullanıcı adı</label>
        <input class="add-sma-form-field" type="text" name="facebookUsername" placeholder="ElversenSMA"  value="<%= typeof facebookUsername != 'undefined' ? facebookUsername : '' %>">
    </div>
    <div class="form-field-container">
        <label for="governmentPermit">Valilik izni (.pdf, .jpg, .png)</label>
        <input class="add-sma-form-field" type="file" name="governmentPermit" >
    </div>
    <div class="terms-and-conditions">        
        <input type="checkbox" name="termsAndConditions" > 
        <label for="termsAndConditions"><a href="/terms-and-conditions" target="_blank">Şartlar ve Koşullar</a></label>
    </div>
    <button type='submit'>Kaydet</button>                                
</form>

                                    
